<% post_shogi_places.each do |post_shogi_place| %>
  <div class="row border mb-3 p-3">
    <div class="text-center col-md-4 col-12">
      <%= image_tag post_shogi_place.get_shogi_place_image(180,180) %><br>
      <p class="mt-3 mb-3">投稿日：<%= post_shogi_place.created_at.strftime('%Y/%m/%d') %></p>
    </div>
    <div class="col-md-8 col-12">
      <div class="mb-3">
        <%= image_tag post_shogi_place.customer.get_customer_image(80,80) %>
        <%= link_to post_shogi_place.customer.name,admin_customer_path(post_shogi_place.customer.id),class:"ml-5" %>
      </div>
      <p><%= link_to post_shogi_place.name,admin_post_shogi_place_path(post_shogi_place.id) %></p>
      <p>住所：<%= post_shogi_place.address %></p>
      <p class="explanation">説明：<%= post_shogi_place.explanation %></p>
    </div>
  </div>
<% end %>