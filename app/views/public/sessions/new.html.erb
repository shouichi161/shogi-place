<div class="container">
  <h2 class="text-center mt-5 mb-5">ログイン画面</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row justify-content-center mb-4">
      <div class="col-md-5 col-10">
        <label for="name">ニックネーム</label>
      </div>
      <%= f.text_field :name, autofocus: true, autocomplete: "name",class:"col-md-5 col-10" %>
    </div>

    <div class="row justify-content-center">
      <div class="col-md-5 col-10">
        <label for="password">パスワード</label>
      </div>
      <%= f.password_field :password, autocomplete: "current-password",class:"col-md-5 col-10" %>
    </div>

    <!--<% if devise_mapping.rememberable? %>-->
    <!--  <div class="field">-->
    <!--    <%= f.check_box :remember_me %>-->
    <!--    <%= f.label :remember_me %>-->
    <!--  </div>-->
    <!--<% end %>-->

    <div class="row justify-content-center m-3">
      <%= f.submit "ログイン",class:"btn btn-primary col-md-3 col-7" %>
    </div>
  <% end %>

  <%= render "public/shared/links" %>

</div>
