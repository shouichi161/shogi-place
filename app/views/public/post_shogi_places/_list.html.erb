<% post_shogi_places.each do |post_shogi_place| %>
  <div class="row border mb-3 p-3">
    <div class="text-center col-md-4 col-12">
      <%= image_tag post_shogi_place.get_shogi_place_image(180,180) %><br>
      <p class="mt-3 mb-3">投稿日：<%= post_shogi_place.created_at.strftime('%Y年%m月%d日') %></p>
    </div>
    <div class="col-md-8 col-12">
      <p><%= link_to post_shogi_place.name,post_shogi_place_path(post_shogi_place.id) %></p>
      <p>住所：<%= post_shogi_place.address %></p>
      <p class="explanation">説明：<%= post_shogi_place.explanation %></p>
      <p>対象者</p>
      <% post_shogi_place.target_audiences.each do |target_audience| %>
        ・<%= target_audience.name %>
      <% end %>
    </div>
  </div>
<% end %>