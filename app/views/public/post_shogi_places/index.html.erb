<h2>投稿一覧</h2>

<%= form_tag post_shogi_places_path, method: :get, class: 'boards__searchForm' do %>
  <%= select_tag :activity_id,
    options_from_collection_for_select(Activity.all, :id, :name, params[:activity_id]),
    {
      prompt:'タグで絞り込み検索',
      onchange:'submit(this.from);'
    }
  %>
    <% end %>

<table>
  <thead>
    <tr>
      <th>画像</th>
      <th>対局場所名</th>
      <th>都道府県</th>
      <th>住所</th>
      <th>対象者</th>
      <th>活動</th>
    </tr>
  </thead>

  <tbody>
    <% @post_shogi_places.each do |post_shogi_place| %>
      <tr>
        <td><%= image_tag post_shogi_place.get_shogi_place_image(80,80) %></td>
        <td><%= post_shogi_place.name %></td>
        <td><%= post_shogi_place.prefecture.name %></td>
        <td><%= post_shogi_place.address %></td>
        <td><%= post_shogi_place.target %></td>
        <% post_shogi_place.activitys.each do |activity| %>
          <td><%= activity.name %></td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>


<%= paginate @post_shogi_places %>
